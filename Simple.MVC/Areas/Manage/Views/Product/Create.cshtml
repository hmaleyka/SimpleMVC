@using Simple.Business.ViewModels;
@model CreateProductVM
<div class=" container">


    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Blog Name</label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name" style=" color: red"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Blog Description</label>
            <input class="form-control" asp-for="Description">
            <span asp-validation-for="Description" style=" color: red"></span>
        </div>
        <div class="row">
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <label asp-for="Image" class="form-label">Image</label>
                <input asp-for="Image" class="form-control">
                <span asp-validation-for="Image" style="color: red"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>